                    <!-- <li><a href="#">Contact</a></li> -->
                </ul>
            </nav>
        </div>
    </header>

    <section >

        <div style=" display: flex; justify-content: center; align-items: center; gap: 50px;">
            <img style="width: 30%;" src="https://i.pinimg.com/736x/15/01/25/1501253cc914d8f148f65edbb3d9e10f.jpg" alt="">

            <form action="/generate-diet-plan" method="post" class="diet-form">
                <h1 style="text-align: center; padding: 18px;">Enter Your Details</h1>
                <label for="age">Age:</label>
                <input type="number" id="age" name="age" required>

                <label for="weight">Weight (kg):</label>
                <input type="number" id="weight" name="weight" required>

                <label for="height">Height (cm):</label>
                <input type="number" id="height" name="height" required>

                <label for="diet">Diet Preference:</label>
                <select id="diet" name="diet" required>
                    <option value="veg">Vegetarian</option>
                    <option value="non-veg">Non-Vegetarian</option>
                    <option value="eggs">Includes Eggs</option>
                    <option value="milk">Includes Milk</option>
                </select>

                <label for="schedule">Schedule:</label>
                <input type="text" id="schedule" name="schedule" required placeholder="e.g., Morning and Evening">

                <label for="exercise">How many days can you exercise per week?</label>
                <select id="exercise" name="exercise" required>
                    <option value="3">3 Days</option>
                    <option value="4">4 Days</option>
                    <option value="5">5 Days</option>
                </select>

                <button type="submit">Generate Diet Plan</button>
            </form>
        </div>



    </section>


